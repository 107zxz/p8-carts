__lua__
function reset_pal()
	pal()
	pal({[1]=-14,[3]=-3,[4]=-16,[10]=-9,[12]=-1}, 1 )
	palt(0x0010)
end

function _init()
	poke(0x5f2d,0x3)
	
		-- palette
	poke(0x5f2e,1)
	reset_pal()
	
	-- cursor
	crs=1
end

function _update60()

end

function _draw()
	cls()
--	ovalfill(0,120,127,135,13)

	draw_shelves()
	
	spr(crs,stat(32),stat(33))
end

function draw_shelves()
	for i=0,2 do
		rrectfill(8,8+i*40,112,32,1,7)
		rrectfill(8,8+i*40+24,112,8,1,13)
	end
	
	crs=1
	if m_zn(16,20,32,36) then
		crs=3
		print("\#1\f8amy's notes",stat(32)+16,stat(33))
		pal{8,8,8,8,8,8,8,8,8,8,8,8,8,8,8,8}
	end
	spr(20,16,20,2,2)
	reset_pal()
	spr(19,20,10)
end
